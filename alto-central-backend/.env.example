# =============================================================================
# Alto Central Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
#
# NOTE: External database connections (Supabase, TimescaleDB) are configured
# in config/sites.yaml, NOT here.

# -----------------------------------------------------------------------------
# Local Database (READ-WRITE)
# -----------------------------------------------------------------------------

# Local PostgreSQL for app data (ML models, cache, chat history)
LOCAL_DB_URL=postgresql+asyncpg://alto:alto@localhost:5432/alto_local

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------

REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# LLM API Keys
# -----------------------------------------------------------------------------

ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
# OPENAI_API_KEY=sk-your-key

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------

SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
API_KEY=your-api-key-for-frontend

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------

ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
